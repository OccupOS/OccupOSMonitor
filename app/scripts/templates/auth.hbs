<div class="row">
    <div class="login span6 offset3">
        <form class="form-horizontal">
            {{control-group name="email"}}
            <div class="control-group">
                <label class="control-label" for="inputPassword">Password</label>
                <div class="controls">
                    {{view Ember.TextField type="password" placeholder="Password" valueBinding="view.password" id="inputPassword"}}
                    <!--<input type="password" id="inputPassword" name="inputPassword" placeholder="Password" ></input>-->
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" /> Remember me
                        </label>
                        |
                        <a href="#">
                            Forgot Password?
                        </a>
                    </div>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <button type="submit" class="btn">Sign in</button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="login span6 offset3">
        <h2>Just arrived? Sign up here</h2>
        <form class="form-horizontal">
            {{control-group name="email" prependId="Register"}}
            {{control-group name='fullName' display='Full name' prependId='Register'}}
            {{control-group name='password' type='password' prependId='Register'}}
            <div class="control-group">
                <div class="controls">
                    <button type="submit" class="btn">Sign up</button>
                </div>
            </div>
        </form>
    </div>
</div>